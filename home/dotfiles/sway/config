# Main keys:
set $mod Mod4
floating_modifier $mod normal
set $left h
set $down j
set $up k
set $right l

# Applications:
set $term alacritty
set $menu fuzzel

# Appearence:
default_border none
default_floating_border none
gaps inner 2
gaps outer 0

# Inputs:
input "type:touchpad" {
  dwt enabled
  tap enabled
  natural_scroll enabled
  middle_emulation enabled
}

input "type:keyboard" {
  xkb_layout "us"
  xkb_options caps:escape
}

# Outputs:
output "eDP-1" {
  resolution 2560x1600
  scale 1
  bg ~/.config/sway/wp/samarkand.png fill
}

output "HDMI-A-1" {
  resolution 2440x1440
  scale 1
  bg ~/.config/sway/wp/samarkand.png fill
}

# Status bar:
bar {
  font JetBrainsMonoNLNerdFontMono 12
  status_command i3status-rs ~/.config/i3status-rust/config.toml
  #tray {
  #  icon_theme adwaita
  #}
}

# Includes:
include /etc/sway/config.d/*
include ~/.config/sway/config.d/*
